@model IEnumerable<MVC01.Models.Northwind.Product>
@{ ViewBag.Title = "Product Search"; }

<h2>@ViewBag.Title Results</h2>

<table>
    <tr>
        <th>ID</th>
        <th>Product Name</th>
        <th>Description</th>
        <th>Unit Price</th>
        <th></th>
    </tr>
    @foreach (var item in Model) {
    <tr>
        <td>@item.ProductID</td>
        <td>@item.ProductName</td>
        <td>@item.Category.CategoryName</td>
        <td>@String.Format("{0:c}", @item.UnitPrice)</td>
        <td>@Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ProductID })
    </td>
    </tr>
    
    }
    
</table>
@Html.ActionLink("Back to Search", "Index")